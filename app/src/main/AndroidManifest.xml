<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permission declarations -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- Feature declarations -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <!-- Application definition and its components (icons go here)-->
    <application

        android:name=".DutMedApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DutMed"
        tools:targetApi="31">

        <!-- Role Selection activity set as the main entry point -->
        <activity
            android:name=".RoleSelectionActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login activity -->
        <activity
            android:name=".Login"
            android:exported="true" />

        <!-- Admin Login activity -->
        <activity
            android:name=".AdminLogin"
            android:exported="true" />

        <!-- Register activity -->
        <activity
            android:name=".Register"
            android:exported="true" />

        <activity
            android:name=".ProfileFragment"
            android:exported="true" />

        <!-- Main activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DutMed" />

        <activity
            android:name=".AppointmentActivity"
            android:exported="true" />

        <activity
            android:name=".UserAppointmentActivity"
            android:exported="true" />


        <!-- Admin Dash -->
        <activity
            android:name=".AdminDashboard"
            android:exported="true" />

        <!-- Admin View Appointment-->
        <activity
            android:name=".AdminViewAppointment"
            android:exported="true" />

        <!-- Feedback Activity -->
        <activity
            android:name=".Feedback"
            android:exported="true"/>

        <!-- Chatbot activity -->
        <activity
            android:name=".ChatbotActivity"
            android:exported="true" />

        <!-- Symptom Checker activity -->
        <activity
            android:name=".SymptomChecker"
            android:exported="true" />
    </application>

</manifest>
